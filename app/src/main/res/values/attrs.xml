<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomProgressBar">
        <attr name="tick_split_angle" format="dimension" />
        <attr name="tick_block_angle" format="dimension" />
        <attr name="normal_tick_size" format="dimension"/>
        <attr name="current_tick_size" format="dimension"/>
        <attr name="unselected_tick_size" format="dimension"/>
        <attr name="gradient_start_color" format="color"/>
        <attr name="gradient_end_color" format="color"/>
        <attr name="tick_normal_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="borderWidth" format="dimension" />
        <attr name="colorSequence" format="reference" />
        <attr name="sweepAnimationDurationMillis" format="integer" />
        <attr name="angleAnimationDurationMillis" format="integer" />
        <attr name="minSweepAngle" format="integer" />
    </declare-styleable>

    <dimen name="circular_default_border_width">4dp</dimen>

    <array name="circular_default_color_sequence">
        <item>@color/circular_red</item>
        <item>@color/circular_blue</item>
        <item>@color/circular_yellow</item>
        <item>@color/circular_green</item>
    </array>

    <integer name="circular_default_sweepAnimationDuration">900</integer>
    <integer name="circular_default_angleAnimationDurationMillis">2000</integer>
    <integer name="circular_default_miniSweepAngle">30</integer>

    <color name="circular_red">#F90101</color>
    <color name="circular_blue">#0266C8</color>
    <color name="circular_yellow">#F2B50F</color>
    <color name="circular_green">#00933B</color>
</resources>